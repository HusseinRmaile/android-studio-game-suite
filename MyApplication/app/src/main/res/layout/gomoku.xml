<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/player2Name"
        android:layout_width="0dp"
        android:layout_height="17dp"
        android:layout_marginStart="64dp"
        app:layout_constraintBottom_toBottomOf="@+id/player2Avatar"
        app:layout_constraintStart_toEndOf="@+id/player2Avatar"
        app:layout_constraintTop_toTopOf="@+id/player2Avatar" />

    <ImageView
        android:id="@+id/player2Avatar"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/player1Name"
        android:layout_width="0dp"
        android:layout_height="17dp"
        android:layout_marginStart="64dp"
        app:layout_constraintBottom_toBottomOf="@+id/player1Avatar"
        app:layout_constraintStart_toEndOf="@+id/player1Avatar"
        app:layout_constraintTop_toTopOf="@+id/player1Avatar" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Gomoku Game page"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/player1Avatar"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="64dp"
        android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>